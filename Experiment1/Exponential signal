clc;
clf;
close all;
clear all;
n1=input('Starting point of the signal: ');
amp=input('Amplitude of signal: ');
dec_fact=input('Decaying factor: ');
sam=0:1:n1-1;
amplitude=amp*exp(-dec_fact*sam);
title('Exponential Signal');
subplot(211);
plot(sam,amplitude);
grid on;
xlabel('Samples');
ylabel('Amplitude');
subplot(212);
stem(sam,amplitude);
grid on;
xlabel('Samples');
ylabel('Amplitude');
